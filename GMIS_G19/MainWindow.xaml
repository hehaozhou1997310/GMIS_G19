<Window x:Class="GMIS_G19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMIS_G19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="36">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="800">
            <TextBlock Text="GROUP MANGEMENT INFORMATION SYSTEM" TextWrapping="Wrap" FontSize="48" HorizontalAlignment="Center" Height="132" Margin="20,20,20,20"/>
            <Label Content="Please choose a category" FontSize="24" HorizontalContentAlignment="Center" Height="38"/>
            <Button Content="Bachelors" FontSize="24" Margin="0,30,0,0" Width="320" Click="Button_Click" Background="#FF88CAE3"/>
            <Button Content="Masters" Margin="0,30,0,0" FontSize="24" Width="320" Click="Button_Click_1" Background="#FF88CAE3"/>
        </StackPanel>
    </Grid>

</Window>

